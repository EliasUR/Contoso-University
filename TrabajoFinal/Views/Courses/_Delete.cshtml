@model TrabajoFinal.Models.Course

<button type="button" class="btn btn-link" data-toggle="modal" data-target="#modal-@Model.Id">Remove</button>

<!-- Modal -->
<div class="modal fade" id="modal-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="modalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel-@Model.Id">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4>You are deleting the course @Model.Title, are you sure you want to continue?</h4>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Yes", "Delete", new { id = Model.Id }, new { @class = "btn btn-outline-danger" })
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
